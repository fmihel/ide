.form{
    border:1px solid $border;
    background:$panel2;
    width:220px;
    height:190px;
    color:$font;    
}

input[type=text],input[type=password]{

    font-size:$input_size;
    font-family: Arial;
    outline:0px;
    border:1px solid $border;
    height:$h;
    line-height:$h;
    text-indent:5px;
    background-color:$input;
            
}



.enter{
    
    left:20px;
    top:130px;
    width:175px;
    line-height:32px;
    height:32px;
    text-align:center;
    border:1px solid $border;
    border-radius:3px;
    cursor:pointer;
            
    overflow:hidden;
    background: $panel;
}

